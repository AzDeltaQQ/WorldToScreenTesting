            "name": "default",
            "displayName": "Default Release",
            "description": "Default configuration with Release build",
            "generator": "Visual Studio 17 2022",
            "architecture": "Win32",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "VCPKG_TARGET_TRIPLET": "x86-windows-static"
            },
